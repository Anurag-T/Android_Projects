<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRepoActivity">

    <TextView
        android:id="@+id/tv_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Owner / Organisation"
        android:textColor="@color/black"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/ed_owner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/tv_owner"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/textview_background"
        android:textAlignment="center"
        android:textSize="24sp"
        app:backgroundTint="@null" />
    <TextView
        android:id="@+id/tv_repo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repo Name"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:layout_below="@id/ed_owner"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/ed_repo_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/tv_repo_name"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/textview_background"
        android:textAlignment="center"
        android:textSize="24sp"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/button_add_repo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background"
        android:padding="16dp"
        android:text="Add"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@null" />



</RelativeLayout>