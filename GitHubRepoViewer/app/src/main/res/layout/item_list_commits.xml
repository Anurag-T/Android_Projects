<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:backgroundTint="@null"
    android:background="@drawable/button_background"
    android:layout_margin="16dp">
    <TextView
        android:id="@+id/tv_item_list_commits_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text = "10 Mar 2021"
        android:textSize="18sp"
        android:layout_marginStart="4dp"
        app:backgroundTint="@null"
        android:background="@drawable/button_background"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_marginStart="4dp"
        android:id="@+id/tv_item_list_commits_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text = "Commit message\nentity\ndisplayed"
        android:textSize="18sp"

        android:gravity="center_vertical"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_item_list_commits_avatar"
        android:layout_margin="8dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/user_image"

        />
        <TextView
            android:id="@+id/tv_item_list_commits_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="Username"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>